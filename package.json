{
    "name": "indo-tosho",
    "version": "0.1.0",
    "description": "Modern anime database with responsive design",
    "private": true,
    "type": "module",
    "scripts": {
        "build": "nuxt build",
        "dev": "cross-env NODE_NO_WARNINGS=1 NODE_OPTIONS=\"--no-deprecation --no-warnings\" nuxt dev",
        "dev:verbose": "nuxt dev",
        "generate": "nuxt generate",
        "preview": "nuxt preview",
        "postinstall": "nuxt prepare",
        "test": "vitest",
        "test:ui": "vitest --ui",
        "test:run": "vitest run",
        "test:coverage": "vitest run --coverage",
        "test:watch": "vitest --watch",
        "lint": "eslint .",
        "lint:fix": "eslint . --fix",
        "typecheck": "nuxt typecheck",
        "check-format": "prettier --check .",
        "format": "prettier --write .",
        "pages:dev": "wrangler pages dev .output/public --compatibility-date=2025-05-15"
    },
    "dependencies": {
        "@heroicons/vue": "^2.2.0",
        "@nuxtjs/supabase": "^1.5.3",
        "isomorphic-dompurify": "^2.26.0",
        "lodash-es": "^4.17.21",
        "lru-cache": "^11.1.0",
        "micromodal": "^0.6.1",
        "tailwindcss": "^3.4.17",
        "vue-toastification": "^2.0.0-rc.5",
        "zod": "^4.0.14"
    },
    "devDependencies": {
        "@headlessui/vue": "^1.7.23",
        "@nuxt/devtools": "latest",
        "@nuxt/eslint-config": "^1.5.2",
        "@nuxt/test-utils": "^3.19.2",
        "@nuxtjs/tailwindcss": "^6.14.0",
        "@pinia/nuxt": "^0.11.1",
        "@pinia/testing": "^1.0.2",
        "@tailwindcss/typography": "^0.5.16",
        "@tailwindcss/vite": "^4.1.11",
        "@types/lodash-es": "^4.17.12",
        "@types/node": "^24.0.12",
        "@types/uuid": "^10.0.0",
        "@vitest/coverage-v8": "^3.2.4",
        "@vitest/ui": "^3.2.4",
        "@vue/test-utils": "^2.4.6",
        "cross-env": "^7.0.3",
        "eslint": "^9.30.1",
        "happy-dom": "^18.0.1",
        "jsdom": "^26.1.0",
        "nuxt": "^3.17.6",
        "pinia": "^3.0.3",
        "prettier": "^3.6.2",
        "prettier-plugin-vue": "^1.1.6",
        "typescript": "^5.8.3",
        "uuid": "^11.1.0",
        "vitest": "^3.2.4",
        "vue": "^3.5.17",
        "vue-router": "^4.5.1"
    },
    "prettier": {
        "tabWidth": 4,
        "trailingComma": "none",
        "arrowParens": "avoid",
        "printWidth": 120
    }
}
